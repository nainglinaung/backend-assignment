{
  "include": [
    "./**/*",
    "test"
  ],
  "types": [
    "reflect-metadata",
    "jest"
  ],
  "typeRoots": [
    "./types",
    "./node_modules/@types"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2017",
      "dom",
      "es2015",
      "esnext.asynciterable",
      "es2020"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false
  }
}